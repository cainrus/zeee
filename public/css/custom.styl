border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

animate()
  -webkit-animation: arguments
  -moz-animation: arguments
  -ms-animation: arguments
  -o-animation: arguments
  animation: arguments

rotation(degr)
  -webkit-transform: rotate(degr)
  -moz-transform: rotate(degr)
  -ms-transform: rotate(degr)
  -o-transform: rotate(degr)
  transform: rotate(degr)

rotatable(time=0.2s) {
  -webkit-transition-duration time
  -moz-transition-duration time
  -o-transition-duration time
  transition-duration time
  -webkit-transition-property -webkit-transform
  -moz-transition-property -moz-transform
  -o-transition-property -o-transform
  transition-property transform
  overflow hidden
}

transitionSetup()
  -webkit-transition arguments
  -moz-transition arguments
  -o-transition arguments
  transition arguments

doRotate(degr=15deg) {
  -webkit-transform rotate(degr)
  -moz-transform rotate(degr)
  -o-transform rotate(degr)
  -ms-transform rotate(degr);
}

doTransform() {
  -webkit-transform arguments
  -moz-transform arguments
  -o-transform arguments
  -ms-transform arguments
}

doGradient(opacity) {
    background-image: -webkit-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,opacity), rgba(0,0,0,0));
    background-image: -moz-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,opacity), rgba(0,0,0,0));
    background-image: -ms-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,opacity), rgba(0,0,0,0));
    background-image: -o-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,opacity), rgba(0,0,0,0));
}

